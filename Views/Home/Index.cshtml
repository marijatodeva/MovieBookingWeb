@{
    ViewData["Title"] = "MovieXcape";
}

<style>
    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('https://wallpaperaccess.com/full/3988284.jpg') no-repeat center center/cover;
        filter: blur(12px) brightness(1.2);
        z-index: -1;
    }

    .hero {
        text-align: center;
        margin-top: 120px;
        color: #fff;
    }

        .hero h1 {
            font-size: 4rem;
            margin-bottom: 20px;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
        }

        .hero p {
            font-size: 1.5rem;
            max-width: 700px;
            margin: 0 auto 40px;
            text-shadow: 1px 1px 6px rgba(0,0,0,0.7);
        }

    .hero-buttons {
        display: flex;
        justify-content: center;
        gap: 25px;
        flex-wrap: wrap;
    }

        .hero-buttons .btn {
            padding: 15px 30px;
            font-size: 1.1rem;
            border-radius: 6px;
            font-weight: bold;
            transition: 0.3s;
        }

    .btn-explore {
        background-color: #ff4b5c;
        border-color: #ff4b5c;
        color: #fff;
    }

        .btn-explore:hover {
            background-color: #ff1c3a;
            border-color: #ff1c3a;
        }

    .btn-tickets {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
    }

        .btn-tickets:hover {
            background-color: #1e7e34;
            border-color: #1e7e34;
        }

    .btn-about {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: #fff;
    }

        .btn-about:hover {
            background-color: #117a8b;
            border-color: #117a8b;
        }



    /* Top Movies Section */
    .section-title {
        text-align: center;
        color: #fff;
        margin: 80px 0 40px 0;
        font-size: 2.8rem;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
    }

    .top-movies {
        display: flex;
        justify-content: center;
        gap: 40px;
        flex-wrap: wrap;
        padding-bottom: 80px;
    }

    .movie-card {
        background: rgba(0,0,0,0.5);
        border-radius: 15px;
        overflow: hidden;
        width: 280px;
        text-align: center;
        box-shadow: 0 0 20px rgba(0,0,0,0.7);
        transition: transform 0.3s;
    }

        .movie-card:hover {
            transform: scale(1.05);
        }

        .movie-card img {
            width: 100%;
            display: block;
            height: 420px;
            object-fit: cover;
        }

        .movie-card h3 {
            padding: 15px;
            color: #fff;
            font-size: 1.2rem;
        }

    .navbar {
        background-color: rgba(0,0,0,0.3); 
        backdrop-filter: blur(10px); 
    }

    .nav-link, .navbar-brand {
        color: #fff !important; 
    }

</style>


<div class="hero">
    <h1>🎬 Welcome to MovieXcape</h1>
    <p>Discover movies, book tickets, and enjoy your favorite films in style.</p>

</div>

<h2 class="section-title">Top 3 Movies Now</h2>

<div class="top-movies">
    @foreach (var movie in Model)
    {
        <a href="/Movie/Details/@movie.Id" style="text-decoration: none; color: inherit;">
            <div class="movie-card" style="position: relative;">
                <img src="@movie.ImageUrl" alt="@movie.Name" />

                <div style="
            position: absolute;
            top: 10px;
            left: 10px;
            background: rgba(0,0,0,0.7);
            padding: 6px 12px;
            border-radius: 8px;
            color: #FFA500; /* портокалово-жолта боја */
            font-weight: bold;
            font-size: 1rem;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
            box-shadow: 0 0 8px rgba(255,165,0,0.7);
            z-index: 10;">
                    ★ @movie.Rating
                </div>

                <h3>@movie.Name</h3>
            </div>
        </a>
    }
</div>

