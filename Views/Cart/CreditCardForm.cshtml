@model MovieWeb.Models.CreditCardPaymentModel

<h2 style="text-align:center; font-family:sans-serif; margin-top:20px;">Checkout</h2>

<form asp-action="Checkout" asp-controller="Cart" method="post" id="creditCardForm">
    <input type="hidden" name="paymentMethod" value="@Model.PaymentMethod" />
    <input type="hidden" name="MovieId" value="@Model.MovieId" />
    <input type="hidden" name="WatchMovie" value="@Model.WatchMovie.ToString("yyyy-MM-dd")" />
    @for (int i = 0; i < Model.Seats.Length; i++)
    {
        <input type="hidden" name="Seats[@i]" value="@Model.Seats[i]" />
    }
    <input type="hidden" name="SelectedShowingId" value="@Model.SelectedShowingId" />

    <div class="credit-card-container">
        <!-- Card Number -->
        <label>Card Number</label>
        <input type="text" id="cardNumber" name="CardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required />

        <!-- Card Holder -->
        <label>Card Holder</label>
        <input type="text" name="CardHolderName" placeholder="John Doe" required />

        <!-- Expiration and CVV -->
        <div class="row">
            <div class="col">
                <label>Expiration</label>
                <input type="text" id="expiration" name="Expiration" placeholder="MM/YY" maxlength="5" required />
            </div>
            <div class="col">
                <label>CVV</label>
                <input type="text" name="CVV" placeholder="123" maxlength="3" required />
            </div>
        </div>

        <button type="submit">Pay</button>
    </div>
</form>

<style>
    .credit-card-container {
        max-width: 420px;
        margin: 40px auto;
        padding: 35px;
        border-radius: 20px;
        background: linear-gradient(135deg, #1a1f71, #4b6cb7);
        box-shadow: 0 12px 30px rgba(0,0,0,0.4);
        color: white;
        font-family: 'Arial', sans-serif;
    }

        .credit-card-container label {
            display: block;
            margin-bottom: 6px;
            font-weight: bold;
            font-size: 14px;
        }

        .credit-card-container input {
            width: 100%;
            padding: 14px;
            margin-bottom: 18px;
            border-radius: 12px;
            border: none;
            font-size: 16px;
        }

        .credit-card-container .row {
            display: flex;
            gap: 12px;
        }

        .credit-card-container .col {
            flex: 1;
        }

        .credit-card-container button {
            width: 100%;
            padding: 16px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(135deg, #ffb74d, #ff8a65);
            color: black;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .credit-card-container button:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 15px rgba(0,0,0,0.35);
            }
</style>

<script>
    const cardInput = document.getElementById('cardNumber');
    const expirationInput = document.getElementById('expiration');
    const form = document.getElementById('creditCardForm');

    // Format card number as 1234 5678 9012 3456
    cardInput.addEventListener('input', function () {
        let value = this.value.replace(/\D/g,'').substring(0,16);
        this.value = value.replace(/(.{4})/g,'$1 ').trim();
    });

    // Format expiration date as MM/YY
    expirationInput.addEventListener('input', function () {
        let value = this.value.replace(/\D/g,'').substring(0,4);
        if(value.length > 2) value = value.slice(0,2)+'/'+value.slice(2);
        this.value = value;
    });

    // Validate expiration date is in the future
    form.addEventListener('submit', function(e){
